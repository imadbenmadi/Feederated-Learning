# Environment Variables for IoT Streaming ML Pipeline

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_TOPIC=iot_stream

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/
MONGODB_DATABASE=iot_analytics

# Global Server Configuration
GLOBAL_SERVER_HOST=0.0.0.0
GLOBAL_SERVER_PORT=8000
GLOBAL_SERVER_URL=http://localhost:8000

# Flink Configuration
FLINK_HOME=/opt/flink
FLINK_PARALLELISM=3

# Spark Configuration
SPARK_HOME=/opt/spark
SPARK_MASTER=local[*]

# Superset Configuration
SUPERSET_PORT=8088
SUPERSET_SECRET_KEY=your-secret-key-here

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/pipeline.log

# Model Configuration
MODEL_UPDATE_FREQUENCY=100
GLOBAL_AGGREGATION_INTERVAL=30

# Python Environment
PYTHONPATH=.
